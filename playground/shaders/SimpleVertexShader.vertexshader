#version 330 core

// Input vertex position data
layout(location = 0) in vec3 vertexPosition_modelspace;

// Input vertex color data
layout(location = 1) in vec3 vertexColor;

uniform mat4 MVP; // Input MVP matrix
out vec3 fragmentColor; // Output color to fragment shader

void main() {
    gl_Position = MVP * vec4(vertexPosition_modelspace, 1); // gl_Position is built-in variable
    fragmentColor = vertexColor; // Set fragment color to input vertex color
}